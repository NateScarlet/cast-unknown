{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
